// Javascript Operators

// Arithmetic Operators

// 2 + 3;
// 3 * 5;
// 2 ** 5; // 32

// Assignment Operators   =

// simple assignment  = , clear variable and assign the new value.

let num = 20;

num;

// compound assignment  += -= *= /= **=  %=

num = 20 * 2;
num *= 2;
('-----------');

let power = 2;

power = power ** 5;
//power **= 5;

// Equality Operators

// loose equality  ==, !=  // converts data type before comparing.
('--------- Loose Equality---------');
3 == 2; // false
2 != 2; // false

'5' == 5; // true
'5' == 6; // false
true == 1;
// strict equality
('--------- Strict Equality---------');
3 === 3;
3 === '3';
'5' === 5;

('String Operator');

let fname = 'Mukhtar';
let lname = ' Mahamed';

let fullname = fname + lname;

fullname += ' Warsame';

fullname;
